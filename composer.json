{
    "name": "wirecard/base-url-matcher",
    "description": "Library for syncing Base URL with WPP URL",
    "type": "library",
    "license": "GNU General Public License v3.0",
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.6",
        "squizlabs/php_codesniffer": "^3.4",
        "sebastian/phpcpd": "^3.0",
        "codeception/codeception": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Wirecard\\": "src/"
        }
    },
    "scripts": {
        "phpcs" : "phpcs --standard=phpcs.xml",
        "phpmd" : "phpmd src text phpmd.xml --suffixes php",
        "phpcs-fix" : "phpcbf src/",
        "phpcpd" : "phpcpd --min-lines 5 --min-tokens 70 --log-pmd tests/_output/phpcpd_report.xml src/",
        "test": "codecept run unit",
        "test-coverage": "codecept run unit --coverage --xml --coverage-html --coverage-xml"
    }

}
